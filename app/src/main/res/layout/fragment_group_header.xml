<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.mobileapp.jolono.remora.fragment.group.GroupHeaderFragment"
    android:orientation="vertical">
    android:orientation = "vertical


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groupHeaderEventName"
        android:clickable="true"
        android:inputType="textShortMessage" 
        android:enabled="false"
        android:focusable="false"
        android:text="Event Title goes here"/>
        
        

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/groupHeaderGroupName"
        android:inputType="textShortMessage"
        android:enabled="false"
        android:focusable="false"/>
        

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groupHeaderGroupDescription"
        android:inputType="textShortMessage"
        android:enabled="false"
        android:focusable="false"/>

</TableLayout>
