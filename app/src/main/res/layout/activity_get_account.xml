<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mobileapp.jolono.remora.activity.GetAccountActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_get_account_base">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_get_account_map_button"
                android:text="@string/map"
                android:layout_gravity="center_horizontal"
                android:layout_row="0"
                android:layout_column="0" />

            <Button
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:id="@+id/activity_get_account_events_button"
                android:text="events"
                android:layout_alignBottom="@+id/activity_get_account_groups_button"
                android:layout_toRightOf="@+id/activity_get_account_groups_button"
                android:layout_toEndOf="@+id/activity_get_account_groups_button"
                android:layout_row="0"
                android:layout_column="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Groups"
                android:id="@+id/activity_get_account_groups_button"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/activity_get_account_map_button"
                android:layout_toEndOf="@+id/activity_get_account_map_button"
                android:layout_row="0"
                android:layout_column="5" />

            <Button
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:text="Create Event"
                android:id="@+id/activity_get_account_create_event_button"
                android:layout_alignBottom="@+id/activity_get_account_search_button"
                android:layout_toLeftOf="@+id/activity_get_account_delete_button"
                android:layout_toStartOf="@+id/activity_get_account_delete_button"
                android:layout_row="1"
                android:layout_column="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search"
                android:id="@+id/activity_get_account_search_button"
                android:layout_below="@+id/activity_get_account_events_button"
                android:layout_toRightOf="@+id/activity_get_account_events_button"
                android:layout_toEndOf="@+id/activity_get_account_events_button"
                android:layout_row="1"
                android:layout_column="5" />
        </GridLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_get_account_base_account_credentials_frag_container"></FrameLayout>

    </LinearLayout>
</ScrollView>
